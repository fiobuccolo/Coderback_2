<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> Title </th>
        <th scope="col"> Price </th>
        <th scope="col"> Description </th>
        <th scope="col"> Category </th>
        <th scope="col">  </th>
      </tr>
    </thead>
    <tbody>
      {{#each prods}}
        <tr>
          <td> {{this.title}}</td>
          <td> {{this.price}}</td>
          <td> {{this.description}}</td>
          <td> {{this.category}} </td>
          <td><button>Add to Cart</button></td>
        </tr>
      {{/each}}

    </tbody>

  </table>
  <div class="position-relative m-4">

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {{#if prods.hasPrevPage}}
          <li class="page-item"><a
              class="page-link"
              href="/students?page={{prods.prevPage}}&&limit=10"
            >Previous</a></li>
        {{/if}}

        {{!-- Links a siguientes p√°ginas --}}

        {{#if prods.hasNextPage}}
          <li class="page-item"><a
              class="page-link"
              href="/students?page={{prods.nextPage}}&&limit=10"
            >Next</a></li>
        {{/if}}

      </ul>
    </nav>
    <p class="btn btn-primary">
      Current Page:
      {{prods.page}}
    </p>
  </div>
 
  </div>
</div>
